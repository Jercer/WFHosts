<Window x:Class="WFHosts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFHosts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid GridLinesVisibility="All" CanUserAddRows="False" CanUserDeleteRows="False" Margin="0,4" ItemsSource="{Binding PingInfos}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="域名" Width="120" Binding="{Binding DomainName}" />
                <DataGridTextColumn Header="IP地址" Width="120" Binding="{Binding IPAddr}"/>
            </DataGrid.Columns>
        </DataGrid>



    </Grid>
</Window>
